<%= form_with(model: todo_manager, local: true) do |form| %>
  <% if todo_manager.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo_manager.errors.count, "error") %> prohibited this todo item from being saved:</h2>

      <ul>
        <% todo_manager.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :tags %>
    <%= form.text_field :tag %>
  </div>

  <div class="field">
  <%= form.label  :"To be completed by" %>
  <%= form.date_field :deadline, as: :date, :placeholder  => 'yyyy/mm/dd', class: 'form-control datepicker' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>


<script>
  $( document ).ready(function() {
    $('.datepicker').datepicker({format: 'dd/mm/yyyy'});
  });
</script>